{
  "name": "neues-studio/hyphen-dictionary",
  "type": "typo3-cms-extension",
  "description": "Adds server-side hyphen for defined words..",
  "homepage": "https://github.com/codemonkey1988/responsive-images/",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "TYPO3",
    "extension",
    "hyphen"
  ],
  "authors": [
    {
      "name": "Tim Schreiner",
      "role": "Developer",
      "email": "tim@neues.studio",
      "homepage": "https://neues.studio"
    }
  ],
  "require": {
    "typo3/cms-core": "^9.5 || ^10.4"
  },
  "require-dev": {
    "nimut/testing-framework": "^5.0",
    "typo3/coding-standards": "^0.2.0"
  },
  "autoload": {
    "psr-4": {
      "NeuesStudio\\HyphenDictionary\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NeuesStudio\\HyphenDictionary\\Tests\\": "Tests"
    }
  },
  "replace": {
    "typo3-ter/hyphen-dictionary": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/hyphen_dictionary ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/hyphen_dictionary"
    ]
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
